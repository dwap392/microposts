<div class="row">
    <aside class="col-md-4">
        <section class="user_info">

<h1>

<%= gravatar_for @user %>

<%= @user.name %><br>
</h1>
<h2>
<%= @user.location %>
</h2>
        </section>
    </aside>
    <div class="col-md-8">

<%= render 'follow_form' if logged_in? %>
        
<% if @user.microposts.any? %>

    <h3>Microposts (
<%= @user.microposts.count %>
)</h3>
    <ol class="microposts">
<%= render @microposts %>
    </ol>    
<% end %>

<% if @user.following_relationships.any? %>
<%= link_to "フォロー一覧",followings_user_path(current_user.id) %>
<% end %>
<br>
<% if @user.follower_relationships.any? %>
<%= link_to "フォロワー一覧",followers_user_path(current_user.id) %>
<% end %>

    </div>

</div>
