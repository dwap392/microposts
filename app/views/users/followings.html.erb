<% @followings.each do |following| %>

<li id="following-<%= following.id %>">
<%= link_to gravatar_for(following, size: 50), following %>
    <span class="name">
<%= link_to following.name, following.name %>
    </span>
    <span class="location">
<%= following.location %>
    </span>
<% end %>
</li>